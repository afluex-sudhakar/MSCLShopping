@model MSCLShopping.Models.CustomerManagement
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/VendorLayout.cshtml";
}




@using (Html.BeginForm("Details", "Vendor", FormMethod.Post, new { @id = "form1" }))
{
    <div class="content content-fixed">
        <div class="container pd-x-0 pd-lg-x-10 pd-xl-x-0">
            <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-30">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                            <li class="breadcrumb-item"><a href="#">Orders</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Order Details</li>
                        </ol>
                    </nav>

                </div>
                <div class="d-none d-md-block">

                </div>
            </div>
            <div class="row row-xs">
                <div class="col-lg-12">
                    <div class="card">

                        <div class="card-footer pd-y-15 pd-x-20">
                            <div class="row row-xs">
                                <div class="col-md-3">

                                    Customer Name
                                    @Html.DisplayFor(m => m.CustomerName)
                                </div>
                                <div class="col-md-3">
                                    Contact No
                                    @Html.DisplayFor(m => m.Mobile)




                                </div>

                                <div class="col-md-3">

                                    Order No
                                    @Html.DisplayFor(m => m.OrderNO)
                                </div>
                                <div class="col-md-3">

                                    Order Date
                                    @Html.DisplayFor(m => m.OrderDate)




                                </div>
                            </div>
                            <div class="row row-xs">
                                <div class="col-md-3">

                                   Total Amount
                                    @Html.DisplayFor(m => m.TotalAmount)
                                </div>
                            </div>
                            <br />
                            <div class="row row-xs">
                                <table id="example23" class="display nowrap table table-hover table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th hidden>PK_GalleryID</th>
                                            <th>S No.</th>
                                            <th>Product</th>
                                            <th>Size</th>
                                            <th>Unit</th>
                                            <th>Quantity</th>
                                            <th>Rate</th>
                                            <th>Amount</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.List != null)
                                            {
                                                int i = 1;
                                                foreach (var Item in Model.List)
                                                {
                                                    <tr class="text-left">
                                                        <td hidden>@Item.OrderID</td>
                                                        <td>@i</td>
                                                        <td>@Item.ProductName</td>
                                                        <td>@Item.SizeName</td>
                                                        <td>@Item.UnitName</td>
                                                        <td>@Item.Quantity</td>
                                                        <td>@Item.Rate</td>
                                                        <td>@Item.TotalAmount</td>
                                                        <td>
                                                            @if (Item.OrderStatus == "Placed")
                                                            {
                                                                <p class="badge badge-primary">@Item.OrderStatus</p>
                                                            }
                                                            else if (Item.OrderStatus == "Shipped")
                                                            {
                                                                <p class="badge badge-warning">@Item.OrderStatus</p>
                                                            }
                                                            else if (Item.OrderStatus == "Dispatched")
                                                            {
                                                                <p class="badge badge-success">@Item.OrderStatus</p>
                                                            }
                                                            else if (Item.OrderStatus == "Cancelled")
                                                            {
                                                                <p class="badge badge-danger">@Item.OrderStatus</p>
                                                            }
                                                            else
                                                            {
                                                                <p class="badge badge-info">@Item.OrderStatus</p>
                                                            }


                                                        </td>
                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

