@model AfluexShopping.Models.CustomerManagement
@{
    ViewBag.Title = "CustomerOrders";
    Layout = "~/Views/Shared/VendorLayout.cshtml";
}


@using (Html.BeginForm("CustomerOrders", "Vendor", FormMethod.Post, new { @id = "form1" }))
{
   
    <div class="content content-fixed">
        <div class="container pd-x-0 pd-lg-x-10 pd-xl-x-0">
            <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-30">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                            <li class="breadcrumb-item"><a href="#">Orders</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Order Details</li>
                        </ol>
                    </nav>

                </div>
                <div class="d-none d-md-block">

                </div>
            </div>
            <div class="row row-xs">
                <div class="col-lg-12">
                    <div class="card">

                        <div class="card-footer pd-y-15 pd-x-20">
                            <div class="row row-xs">
                                <div class="col-md-3">

                                    Customer Name
                                    @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @Placeholder = "Customer Name" })
                                </div>
                                <div class="col-md-3">
                                    Order No
                                    @Html.TextBoxFor(m => m.OrderNO, new { @class = "form-control", @Placeholder = "Order No" })




                                </div>

                                <div class="col-md-3">

                                    From Date
                                    @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "From Date", @readonly = "readonly" })
                                </div>
                                <div class="col-md-3">

                                    To Date
                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "To Date", @readonly = "readonly" })




                                </div>
                            </div>
                            <div class="row row-xs">
                                <div class="col-md-3">

                                    <br />
                                    <input class="btn btn-info btn-sm" type="submit" value="Search" id="btnSearch" name="Search" />

                                </div>
                            </div>
                            <br />
                            <div class="row row-xs">
                                <table id="example23" class="display nowrap table table-hover table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>S No.</th>
                                            <th>OrderDate</th>
                                            <th>Order No.</th>
                                            <th>CustomerName</th>
                                            <th>Mobile No</th>
                                            <th>TotalAmount</th>
                                            <th>Payment Mode</th>
                                            <th>Address</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.List != null)
                                            {
                                                int i = 1;
                                                foreach (var Item in Model.List)
                                                {
                                                    <tr class="text-left">

                                                        <td>@i</td>
                                                        <td>@Item.OrderDate</td>
                                                        <td>@Item.OrderNO</td>
                                                        <td>@Item.CustomerName</td>
                                                        <td>@Item.Mobile</td>
                                                        <td>@Item.TotalAmount</td>
                                                        <td>@Item.PaymentMode</td>
                                                        <td>@Item.Address</td>
                                                        <td>
                                                            <a href="/Vendor/Details?id=@Item.OrderID" class="btn btn-primary btn-sm" target="_blank">View</a>
                                                        </td>
                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    </tbody>
                                    </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




}

<script src="../../AdminCSS/js/jquery.min.js"></script>

<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        maxDate: 0,
        changeYear: true,
        changeMonth: true
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
        minDate: new Date(new Date().setMonth(new Date().getMonth() - 2))
    });

</script>


