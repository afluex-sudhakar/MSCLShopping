    <style>
        ol.progtrckr {
            margin: 0;
            padding: 0;
            list-style-type: none;
        }

            ol.progtrckr li {
                display: inline-block;
                text-align: center;
                line-height: 3.5em;
            }

            ol.progtrckr[data-progtrckr-steps="2"] li {
                width: 49%;
            }

            ol.progtrckr[data-progtrckr-steps="3"] li {
                width: 33%;
            }

            ol.progtrckr[data-progtrckr-steps="4"] li {
                width: 24%;
            }

            ol.progtrckr[data-progtrckr-steps="5"] li {
                width: 19%;
            }

            ol.progtrckr[data-progtrckr-steps="6"] li {
                width: 16%;
            }

            ol.progtrckr[data-progtrckr-steps="7"] li {
                width: 14%;
            }

            ol.progtrckr[data-progtrckr-steps="8"] li {
                width: 12%;
            }

            ol.progtrckr[data-progtrckr-steps="9"] li {
                width: 11%;
            }

            ol.progtrckr li.progtrckr-done {
                color: black;
                border-bottom: 4px solid yellowgreen;
            }

            ol.progtrckr li.progtrckr-todo {
                color: silver;
                border-bottom: 4px solid silver;
            }

            ol.progtrckr li:after {
                content: "\00a0\00a0";
            }

            ol.progtrckr li:before {
                position: relative;
                bottom: -2.5em;
                float: left;
                left: 50%;
                line-height: 1em;
            }

            ol.progtrckr li.progtrckr-done:before {
                content: "\2713";
                color: white;
                background-color: yellowgreen;
                height: 2.2em;
                width: 2.2em;
                line-height: 2.2em;
                border: none;
                border-radius: 2.2em;
            }

            ol.progtrckr li.progtrckr-todo:before {
                content: "\039F";
                color: silver;
                background-color: white;
                font-size: 2.2em;
                bottom: -1.2em;
            }
    </style>
    <script src="../../AdminCSS/js/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#divload").css({ 'display': 'none' });
        });
    </script>
    <script>

        function responseMessage(msg) {
            $('.success-box').fadeIn(200);
            $('.success-box div.text-message').html("<span>" + msg + "</span>");
        }
        function productratingopen(productinfocode, ProductName, primaryimage) {
            $('#productinfocode').html(productinfocode);
            $('#lblProductName').html(ProductName);
            $("#productimg").attr("src", primaryimage);
            $('#productrating').modal('show');
        }
        function vendorratingopen(Vendorname, Fk_vendorId) {
            $('#lblVendorName').html(Vendorname);
            $('#lblVendorId').html(Fk_vendorId);

            $('#vendorrating').modal('show');
        }

        function productrating() {
            $(".errortext").removeClass("errortext");
            if ($('#txtcomment').val() == '') {
                $("#txtcomment").addClass('errortext');

                return false;
            }
            if ($('#starrating').html() == "") {
                $('#starrating').html('5');
            }
            $.ajax({
                url: "/Customer/RateProduct",
                Type: "Get",
                DataType: "JSON",
                data: { Comment: $("#txtcomment").val(), StarRating: $('#starrating').html(), productinfocode: $('#productinfocode').html() },
                success: function (data) {
                    alert('Product Rating Completed.');
                    $('#productrating').modal('hide');
                }

            });
        }
        function vendorating() {
            $(".errortext").removeClass("errortext");
            if ($('#txtcommentvendor').val() == '') {
                $("#txtcommentvendor").addClass('errortext');

                return false;
            }
            if ($('#starratingvendor').html() == "") {
                $('#starratingvendor').html('5');
            }
            $.ajax({
                url: "/Customer/RateVendor",
                Type: "Get",
                DataType: "JSON",
                data: { Comment: $("#txtcommentvendor").val(), StarRating: $('#starratingvendor').html(), Fk_vendorId: $('#lblVendorId').html() },
                success: function (data) {
                    alert('Vendor Rating Completed.');
                    $('#vendorrating').modal('hide');
                }

            });
        }
        function starrating(value) {
            $('#starrating').html(value);
            if (value == 4) {
                $('#firststar').hide();
                $('#secoundstar').hide();
                $('#thirdstar').hide();
                $('#fourstar').show();
                $('#fivestar').hide();
            }
            if (value == 1) {
                $('#firststar').show();
                $('#secoundstar').hide();
                $('#thirdstar').hide();
                $('#fourstar').hide();
                $('#fivestar').hide();
            }
            if (value == 2) {
                $('#firststar').hide();
                $('#secoundstar').show();
                $('#thirdstar').hide();
                $('#fourstar').hide();
                $('#fivestar').hide();
            }
            if (value == 3) {
                $('#firststar').hide();
                $('#secoundstar').hide();
                $('#thirdstar').show();
                $('#fourstar').hide();
                $('#fivestar').hide();
            }
            if (value == 5) {
                $('#firststar').hide();
                $('#secoundstar').hide();
                $('#thirdstar').hide();
                $('#fourstar').hide();
                $('#fivestar').show();
            }
        }

        function vendorstarrating(value) {
            $('#vendorstarrating').html(value);
            if (value == 4) {
                $('#vendorfirststar').hide();
                $('#vendorsecoundstar').hide();
                $('#vendorthirdstar').hide();
                $('#vendorfourstar').show();
                $('#vendorfivestar').hide();
            }
            if (value == 1) {
                $('#vendorfirststar').show();
                $('#vendorsecoundstar').hide();
                $('#vendorthirdstar').hide();
                $('#vendorfourstar').hide();
                $('#vendorfivestar').hide();
            }
            if (value == 2) {
                $('#vendorfirststar').hide();
                $('#vendorsecoundstar').show();
                $('#vendorthirdstar').hide();
                $('#vendorfourstar').hide();
                $('#vendorfivestar').hide();
            }
            if (value == 3) {
                $('#vendorfirststar').hide();
                $('#vendorsecoundstar').hide();
                $('#vendorthirdstar').show();
                $('#vendorfourstar').hide();
                $('#vendorfivestar').hide();
            }
            if (value == 5) {
                $('#vendorfirststar').hide();
                $('#vendorsecoundstar').hide();
                $('#vendorthirdstar').hide();
                $('#vendorfourstar').hide();
                $('#vendorfivestar').show();
            }
        }
    </script>
