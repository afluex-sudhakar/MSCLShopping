<script>
    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });
    });
    function login() {
        $(".errortext").removeClass("errortext");
        if ($('#LoginId').val() == '') {
            $("#LoginId").addClass('errortext');
            $('#LoginId').focus();
            return false;
        }
        if ($('#Password').val() == '') {
            $("#Password").addClass('errortext');
            $('#Password').focus();
            return false;
        }
        $("#divload").css({ 'display': '' });
        $.ajax({
            url: "/Home/LoginVendor",
            Type: "Get",
            DataType: "JSON",
            data: { LoginID: $("#LoginId").val(), Password: $("#Password").val() },
            success: function (data) {
                if (data.Response == "1") {
                    window.location = "/Vendor/DashBoard";
                }
                else {
                    alert(data.Response);
                    $("#divload").css({ 'display': 'none' });
                }
            }
        });
    }
</script>