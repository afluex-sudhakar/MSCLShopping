@model AfluexShopping.Models.Customer
@{
    ViewBag.Title = "ProductsPage";
}

<h2>List Of Products</h2>

<p style="color:red">
    @TempData["msg"]
</p>

<table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
        <tr>
            <th>S No.</th>
            <th>Brand Name</th>
            <th>Product Name</th>
            <th>Size</th>
            <th>Unit</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            if (Model.lstProducts != null)
            {
                int i = 1;
                foreach (var Item in Model.lstProducts)
                {
            <tr class="text-left">
                <td>@i</td>
                <td>@Item.ProductName</td>
                <td>@Item.SizeName</td>
                <td>@Item.UnitName</td>
                <td>
                    <a href="/Customer/AddToCart?productID=@Item.ProductID&&sizeID=@Item.SizeID&&unitID=@Item.UnitID" runat="server" class="btn btn-success pull-right" name="btnUpdate">Add To Cart</a>
                    @*<a href="/Master/DeleteCategory/@Item.CategoryID" class="btn btn-danger btn-sm" onclick = "return confirm('Are you sure you wish to delete this Category?');">Delete</a>*@
                </td>
            </tr>
                    i++;
                }
            }
        }
    </tbody>
</table>

