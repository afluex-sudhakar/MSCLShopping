@model AfluexShopping.Models.Customer

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}
@using (Html.BeginForm("ChangePassword", "Customer", FormMethod.Post, new { @id = "form1" }))
{

    <main class="main">
       
        <div class="breadcrumb">
            <div class="container">
                <div class="breadcrumb-inner">
                    <ul class="list-inline list-unstyled">
                        <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                        <li><a href="#">Change Password</a></li>
                    </ul>
                </div><!-- /.breadcrumb-inner -->
            </div><!-- /.container -->
        </div>
        <div class="sign-in-page spaceacc">
        <div class="container">
            <div class="row">
                <div class="col-md-9 col-sm-12 create-new-account">
                    <h4 class="checkout-subtitle">Change Password</h4>
                    <span style="color:red">@TempData["Login"]</span>
                    <form class="register-form outer-top-xs" role="form"> 
                        <div class="form-group">
                            <label class="info-title" for="exampleInputEmail1">Password <span>*</span></label>
                          @*  <input type="email" class="form-control unicase-form-control text-input" id="exampleInputEmail1">*@
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control unicase-form-control text-input", @Placeholder = "Password", @required = "required" })
                        </div>
                        <div class="form-group">
                            <label class="info-title" for="exampleInputEmail1">New Password <span>*</span></label>
                            @*<input type="email" class="form-control unicase-form-control text-input" id="exampleInputEmail1">*@
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control unicase-form-control text-input", @Placeholder = "New Password", @required = "required" })
                        </div>
                        <div class="form-group">
                            <label class="info-title" for="exampleInputEmail1">Confirm Password <span>*</span></label>
                            @*<input type="email" class="form-control unicase-form-control text-input" id="exampleInputEmail1">*@

                            @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control unicase-form-control text-input", @Placeholder = "Confirm Password", @required = "required", @onchange = "return Check();" })
                         </div>
                        <input type="submit" class="btn-upper btn btn-primary checkout-page-button" value="Reset My Password"  id="Change" name="Change"/>
                       @* <button type="submit" class="btn-upper btn btn-primary checkout-page-button">Reset My Password</button>*@
                    </form>
                </div>
                @{Html.RenderAction("CustomerLeftMenu", "Customer", new { area = "" });}
 
                
            </div>

           
        </div>
            </div>

        <div class="mb-5"></div>
    </main>
                }

<script src="../../AdminCSS/js/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });
    });
</script>
<script>
    function Check() {
        debugger
        if ($('#ConfirmNewPassword').val() != $('#NewPassword').val()) {

            alert("Confirm Password and new password should be same .")
            $('#ConfirmNewPassword').val('')
        }
    }
</script>

