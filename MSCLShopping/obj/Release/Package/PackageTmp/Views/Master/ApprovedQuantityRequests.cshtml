@model AfluexShopping.Models.Master

@{
    ViewBag.Title = "ApprovedQuantityRequests";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("ApprovedQuantityRequests", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Approved Quantity Requests</h4>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>
                            Product Name
                        </label>
                        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", @placeholder = "Search By  Product Name" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <br />
                        <input type="submit" id="Search" value="Get Details" name="Search" class="btn btn-primary" />
                    </div>
                </div>


            </div>
            <div class="row">
                <div class="col-md-12">
                    <h4 class="card-title">List</h4>
                    <table id="order-listing" class="table table-responsive">
                        <thead>
                            <tr>
                                <th>S No.</th>
                                <th>Vendor Name</th>
                                <th>Product Name </th>
                                <th>Brand</th>
                                <th>MRP </th>
                                <th> Unit</th>
                                <th>Size </th>
                                <th> Flavor</th>
                                <th> Material</th>
                                <th> Color</th>
                                <th> RAM</th>
                                <th>Storage </th>
                                <th>Requested Qty </th>
                                <th>Assigned Qty  </th>
                                <th>Assigned Date </th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstProduct != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstProduct)
                                    {
                                        <tr class="text-left">
                                            <td>@i</td>
                                            <td>@Item.Name</td>
                                            <td>@Item.ProductName</td>
                                            <td>@Item.BrandName  </td>
                                            <td>@Item.MRP</td>
                                            <td>@Item.UnitName</td>
                                            <td>@Item.SizeName</td>
                                            <td>@Item.FlavorName</td>
                                            <td>@Item.MaterialName</td>
                                            <td>@Item.ColorName</td>
                                            <td>@Item.RAM</td>
                                            <td>@Item.Storage</td>
                                            <td>@Item.Quantity </td>
                                            <td>@Item.DebQuantity </td>
                                            <td>@Item.ToDate </td>
                                            <td>@Item.Status </td>
                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div>
                <br />
                <input type="submit" id="Save" value="Assign" name="Save" class="btn btn-success" onclick="return validateform();" />
            </div>
        </div>
    </div>


}
