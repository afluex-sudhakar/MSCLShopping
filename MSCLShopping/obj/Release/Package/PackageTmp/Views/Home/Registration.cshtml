@model AfluexShopping.Models.Customer

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_CustomerLayout1.cshtml";
}
@using (Html.BeginForm("CustomerRegistration", "Home", FormMethod.Post, new { @id = "form1" }))
{
       <!-- breadcrumb area start -->
    <section class="breadcrumb__area include-bg text-center pt-40 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-xxl-12">
                    <div class="breadcrumb__content p-relative z-index-1">
                        <h3 class="breadcrumb__title">Register Now</h3>
                        <div class="breadcrumb__list">
                            <span><a href="#">Home</a></span>
                            <span>Register</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb area end -->
    <!-- login area start -->
    <section class="tp-login-area pb-140 p-relative z-index-1 fix">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8">
                    <div class="tp-login-wrapper">
                        <div class="tp-login-option">
                            <div class="tp-login-social mb-10 d-flex flex-wrap align-items-center justify-content-center">
                                <div class="tp-login-option-item has-google">
                                    <a href="https://accounts.google.com/InteractiveLogin/signinchooser?elo=1&ifkv=ASKXGp31AoRwQOYeMuMZhdw-ixNT5KzFzTOmxbVkU7gxE0yCI580K5kb1E6sw6Qzt0eIYWsdSQoR&theme=glif&flowName=GlifWebSignIn&flowEntry=ServiceLogin">
                                        <img src="/newassets/img/icon/login/google.svg" alt="">
                                        Sign up with google
                                    </a>
                                </div>
                                <div class="tp-login-option-item">
                                    <a href="#">
                                        <img src="/newassets/img/icon/login/facebook.svg" alt="">
                                    </a>
                                </div>
                            </div>
                            <div class="tp-login-mail text-center mb-40">
                                <p>or Sign up with <a href="#">Email</a></p>
                            </div>
                            <div class="tp-login-input-wrapper">

                                <div class="tp-login-input-box">
                                    <div class="tp-login-input">
                                        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control" })
                                    </div>
                                    <div class="tp-login-input-title">
                                        <label for="name">Your Name <span style="color:red">*</span></label>
                                    </div>
                                </div>
                                <div class="tp-login-input-box">
                                    <div class="tp-login-input">
                                        @Html.TextBoxFor(m => m.Contact, new { @class = "form-control" })
                                    </div>
                                    <div class="tp-login-input-title">
                                        <label for="contact">Your Contact No. <span style="color:red">*</span></label>
                                    </div>
                                </div>
                                <div class="tp-login-input-box">
                                    <div class="tp-login-input">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    </div>
                                    <div class="tp-login-input-title">
                                        <label for="email">Your Email</label>
                                    </div>
                                </div>
                                <div class="tp-login-input-box">
                                    <div class="tp-login-input">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    </div>
                                    <div class="tp-login-input-title">
                                        <label for="tp_password">Password <span style="color:red">*</span></label>
                                    </div>
                                </div>
                            </div>
                            <div class="tp-login-bottom">
                                <input type="submit" value="Sign Up" onclick="validateformSignup();" class="tp-login-btn w-100" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- login area end -->
}

<style>
    .errortext{
        border: 2px solid #ff0000;
        background-color:#ffd6d6 !important;
    }
</style>

<script>
    function validateformSignup() {
        $(".errortext").removeClass("errortext");
        debugger;
        if ($('#CustomerName').val() == '') {
            $("#CustomerName").addClass('errortext');
            $('#CustomerName').focus();
            return false;
        }
        if ($('#Contact').val() == '') {
            $("#Contact").addClass('errortext');
            $('#Contact').focus();
            return false;
        }
        if ($('#Password').val() == '') {
            $("#Password").addClass('errortext');
            $('#Password').focus();
            return false;
        }
        return true;
    }
</script>