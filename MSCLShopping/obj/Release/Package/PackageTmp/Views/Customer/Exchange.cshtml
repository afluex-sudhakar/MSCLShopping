@model AfluexShopping.Models.Customer

@{
    ViewBag.Title = "Exchange";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}

<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css" />

<style>
    .topright {
        position: absolute;
        top: 8px;
        right: 16px;
        font-size: 18px;
    }

    .span {
        content: "\2713";
        color: white;
    }

    .span1 {
        content: "\2713";
        color: black;
    }

    .firsttime {
        color: black;
        background-color: white;
        padding-left: 5px;
        padding-top: 5px;
        border: solid;
        border-color: blue;
        border-width: 2px;
        background-color: deepskyblue;
    }
</style>

<div id="divProductDetails">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="product-single-container product-single-default">
                    <div class="row">
                        <div class="col-lg-7 product-single-gallery">
                            <div class="sticky-slider">
                                <div class="product-slider-container product-item">
                                    <div class="product-single-carousel owl-carousel owl-theme">
                                        @if (Model != null)
                                        {
                                            if (Model.lstproductimages != null)
                                            {
                                                foreach (var item in Model.lstproductimages)
                                                {
                                                    <div class="product-item">
                                                        <img class="product-single-image" src="@item.SecondaryImage" data-zoom-image="@item.SecondaryImage" />
                                                    </div>
                                                }
                                            }
                                        }
                                    </div>
                                    <span class="prod-full-screen">
                                        <i class="icon-plus"></i>
                                    </span>
                                </div>

                                <div class="prod-thumbnail row owl-dots transparent-dots" id='carousel-custom-dots'>
                                    @if (Model != null)
                                    {
                                        if (Model.lstproductimages != null)
                                        {
                                            foreach (var item in Model.lstproductimages)
                                            {
                                                <div class="owl-dot">
                                                    <img src="@item.SecondaryImage" />
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="product-single-details">
                                <h1 class="product-title"><span id="productName">@Model.ProductName</span></h1>
                                <div class="price-box">
                                    <span class="old-price" id="mrp1">&#8377 </span><span class="old-price" id="mrp"> @Model.MRP </span>
                                    <span class="product-price">&#8377 </span><span class="product-price" id="offeredPrice"> @Model.OfferedPrice</span>
                                    <div class="product-price" id="discount" style="color: #1cb8e6;">Discount %(@Model.OfferDiscountPerc)</div>
                                </div>
                                <div class="product-desc">
                                    <p id="shortDescription">@Model.ShortDescription</p>
                                </div>

                                <div class="product-filters-container">
                                    @if (Model != null)
                                    {
                                        @Html.HiddenFor(m => m.ColorID)
                                        if (Model.lstColorMapped != null)
                                        {
                                            var i = 0;
                                            int colrcount = 0;
                                            <input type="hidden" id="hdValidateColor" value="1" />
                                            <div class="product-single-filter">
                                                <label>Colors</label>
                                                <ul class="config-swatch-list1" id="ulColor">

                                                    @foreach (var item in Model.lstColorMapped)
                                                    {
                                                        if (item.Status == "selectedColor")
                                                        {
                                                            //href="/Customer/QuickView?pid=@Model.EncryptKey&colorid=@item.ColorID"
                                                            <li title="@item.ColorName" class="@item.CssClass" id="lstColor_@i">
                                                                <a class="@item.Status" onclick="return colorChange(@i,@item.ColorID)" style="border: 1px solid black;cursor:pointer;height:35px;width:35px;background-color: @item.ColorCode" @*onclick="return colorChange(@item.ColorID);"*@>

                                                                    <p style="padding-left: 6px;padding-top: 5px;color: #541a24;font-size: 14px;font-style: italic">
                                                                        <b> &nbsp;✓&nbsp;</b>
                                                                    </p>

                                                                </a>
                                                            </li>
                                                        }
                                                        else
                                                        {
                                                            <li title="@item.ColorName" class="@item.CssClass" id="lstColor_@i">
                                                                <a class="@item.Status" onclick="return colorChange(@i,@item.ColorID)" style="border: 1px solid black;cursor:pointer;height:35px;top:12px;padding-top: 5px;;width:35px;background-color: @item.ColorCode" @*onclick="return colorChange(@item.ColorID);"*@>
                                                                </a>
                                                            </li>
                                                        }
                                                        i++;
                                                        colrcount++;
                                                    }
                                                </ul>

                                            </div>
                                        }
                                    }
                                    @if (Model != null)
                                    {
                                        if (Model.lstSizeMapped != null)
                                        {
                                            var i = 0;
                                            <input type="hidden" id="hdValidateSize" value="1" />
                                            <div class="product-single-filter" id="divSize">
                                                <label>Size</label>
                                                <ul class="config-swatch-list" id="ddlSize">
                                                    @foreach (var item in Model.lstSizeMapped)
                                                    {
                                                        <li id="lstsize_@i" class="@item.CssClass" style="margin-top:15px;height: 40px;">
                                                            <h5>
                                                                <a style="cursor:pointer" id="asize_@i" class="@item.Status" onclick="return sizeChange(@i,@item.SizeID,@item.UnitID);">&nbsp;@item.SizeName &nbsp;</a>
                                                            </h5>
                                                        </li>

                                                        i++;
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    }
                                    @if (Model != null)
                                    {
                                        if (Model.lstMaterialMapped != null)
                                        {
                                            var i = 0;
                                            <input type="hidden" id="hdValidateMaterial" value="1" />
                                            <div class="product-single-filter" id="divMaterial">
                                                <label>Material</label>
                                                <ul class="config-swatch-list" id="ulMaterial">
                                                    @foreach (var item in Model.lstMaterialMapped)
                                                    {
                                                        <li id="lstMaterial_@i" style="margin-top:15px;height:22px">
                                                            <h5>
                                                                <a style="cursor:pointer" id="amaterial_@i" class="@item.Status" onclick="return materialChange(@i,@item.MaterialID);">&nbsp; @item.MaterialName &nbsp;</a>
                                                            </h5>
                                                        </li>
                                                        i++;
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    }
                                    @if (Model != null)
                                    {
                                        if (Model.lstFlavorMapped != null)
                                        {
                                            var i = 0;
                                            <input type="hidden" id="hdValidateFlavor" value="1" />
                                            <div class="product-single-filter" id="divFlavor">
                                                <label>FLAVOUR</label>
                                                <ul class="config-swatch-list" id="ulFlavor">
                                                    @foreach (var item in Model.lstFlavorMapped)
                                                    {
                                                        <li id="lstFlavour_@i" style="margin-top:15px;height:22px">
                                                            <h5>
                                                                <a style="cursor:pointer" id="aflavour_@i" onclick="return flavorChange(@i,@item.FlavorID);" class="@item.Status">&nbsp; @item.FlavorName &nbsp;</a> @*onclick="return ramChange(@i,@item.RamID);"*@
                                                            </h5>
                                                        </li>
                                                        i++;
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    }
                                    @if (Model != null)
                                    {
                                        if (Model.lstRam != null)
                                        {
                                            var i = 0;
                                            <input type="hidden" id="hdValidateRam" value="1" />
                                            <div class="product-single-filter" id="divRam">
                                                <label>RAM</label>
                                                <ul class="config-swatch-list" id="ulRam">
                                                    @foreach (var item in Model.lstRam)
                                                    {
                                                        <li id="lstRam_@i" style="margin-top:15px;height:22px">
                                                            <h5>
                                                                <a id="aram_@i" style="cursor:pointer" onclick="return ramChange(@i,@item.RamID);" class="@item.Status">&nbsp; @item.RamName &nbsp;</a> @*onclick="return ramChange(@i,@item.RamID);"*@
                                                            </h5>
                                                        </li>
                                                        i++;
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    }
                                    @if (Model != null)
                                    {
                                        if (Model.lstStorage != null)
                                        {
                                            var i = 0;
                                            <input type="hidden" id="hdValidateStorage" value="1" />
                                            <div class="product-singl
                                                 e-filter" id="divStorage">
                                                <label>Storage</label>
                                                <ul class="config-swatch-list" id="ulStorage">
                                                    @foreach (var item in Model.lstStorage)
                                                    {
                                                        <li id="lstStorage_@i" style="margin-top:15px;height:22px">
                                                            <h5>
                                                                <a id="astorage_@i" style="cursor:pointer" onclick="return storageChange(@i,@item.StorageID);" class="@item.Status">&nbsp; @item.StorageName &nbsp;</a> @* onclick="return storageChange(@i,@item.StorageID);"*@
                                                            </h5>
                                                        </li>
                                                        i++;
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    }
                                </div>

                                <div class="product-action">
                                    <div class="product-single-qty">
                                        <input class="horizontal-quantity form-control" type="text" id="txtQty">
                                    </div>
                                    <input type="button" value="Confirm Exchange" class="btn btn-sm btn-primary" id="exchange" onclick="return validateExchangeAmount();" />
                                </div>
                                <div class="product-single-share mb-4">
                                    <label style="color:blue">Delivery Charge</label>
                                    <div class="product-single-share">
                                        <span id="spDeliveryCharge" style="color: green;font-size: 15px;font-family: cursive;">@Model.DeliveryCharge</span>
                                    </div>
                                </div>
                                <div class="product-single-share mb-4">
                                    <label style="color:blue">Vendor</label>
                                    <div class="product-single-share">
                                        <label style="color: green;font-size: 15px;font-family: cursive;">@Model.VendorName</label>
                                        <input type="hidden" id="hdFk_VendorId" value="@Model.Fk_vendorId" />
                                    </div>
                                </div>
                                <br />
                                @if (Model != null)
                                {
                                    if (Model.lstVendors != null)
                                    {
                                        <div class="product-single-share mb-4">
                                            <a style="cursor:pointer; color:blue" data-toggle="modal" data-target="#vendorModal">@Model.lstVendors.Count More Vendors</a>
                                        </div>
                                    }
                                }
                                <br />
                                <div class="product-single-share mb-4">
                                    <label>Share:</label>
                                    <!-- www.addthis.com share plugin-->
                                    <div class="product-single-share">
                                        <div class="addthis_inline_share_toolbox"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="product-single-tabs">
                                <ul class="nav nav-tabs" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="product-tab-desc" data-toggle="tab" href="#product-desc-content" role="tab" aria-controls="product-desc-content" aria-selected="true">Description</a>
                                    </li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane fade show active" id="product-desc-content" role="tabpanel" aria-labelledby="product-tab-desc">
                                        <div class="product-desc-content">
                                            <p>@Model.Description</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
        @if (Model != null)
            {
                if (Model.lstrating != null)
                {
                    foreach (var item in Model.lstrating)
                    {
                    <div class="product-single-tabs">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="product-tab-desc" data-toggle="tab" href="#product-desc-content" role="tab" aria-controls="product-desc-content" aria-selected="true">Reviews</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="product-desc-content" role="tabpanel" aria-labelledby="product-tab-desc">
                                <div class="product-desc-content">
                                    <p>
                                        @item.Comment
                                        <br />
                                        <b style="color:blue">By-@item.CustomerName on @item.AddedOn</b>

                                    </p>
                                    <div class="ratings-container">
                                        <div class="product-ratings">
                                            <span class="ratings" style="width:@item.StarRating"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>

