@model AfluexShopping.Models.Home


<ul class="side-menu active">
    <li class="slide mt-5">
        <a class="side-menu__item" data-bs-toggle="slide" href="/Admin/Dashboard"><i class="side-menu__icon fe fe-home"></i><span class="side-menu__label">Dashboard</span></a>
    </li>
    @if (Model != null)
    {
        if (Model.lstMenu != null)
        {
            foreach (var item in Model.lstMenu)
            {
                if (item.Url != "#")
                {
                    <li class="slide">
                        <a href="@item.Url"><i class="fe fe-home"></i> @item.MenuName</a>
                    </li>
                }
                else
                {
                    <li class="slide">
                        @*<a href="@item.Url"><i class="fe fe-document"></i> <span> @item.MenuName</span> <span class="menu-arrow"></span></a>*@
                        <a class="side-menu__item" data-bs-toggle="slide" href="@item.Url"><i class="side-menu__icon fe fe-database"></i><span class="side-menu__label">@item.MenuName</span><i class="angle fa fa-angle-right"></i></a>
                        <ul class="slide-menu">
                            @foreach (var item1 in Model.lstsubmenu)
                            {
                                if (item1.MenuId == item.MenuId)
                                {
                                    @*<li><a href="@item1.Url">@item1.SubMenuName</a></li>*@
                                    <li><a href="@item1.Url" class="slide-item">@item1.SubMenuName</a></li>
                                }
                            }
                        </ul>
                    </li>
                }
            }
        }
    }     
</ul>
