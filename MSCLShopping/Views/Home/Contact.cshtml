@model MSCLShopping.Models.Home

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_CustomerLayout1.cshtml";
}

@using (Html.BeginForm("SaveContact", "Home", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data", @automcomplete = "off" }))
{
   <!-- breadcrumb area start -->
<section class="breadcrumb__area include-bg text-center pt-95 pb-50">
    <div class="container">
        <div class="row">
            <div class="col-xxl-12">
                <div class="breadcrumb__content p-relative z-index-1">
                    <h3 class="breadcrumb__title">Keep In Touch with Us</h3>
                    <div class="breadcrumb__list">
                        <span><a href="#">Home</a></span>
                        <span>Contact</span>
                    </div>
                    <span style="color:red">@TempData["SuccesMessage"]</span>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb area end -->
<!-- contact area start -->
<section class="tp-contact-area pb-100">
    <div class="container">
        <div class="tp-contact-inner">
            <div class="row">
                <div class="col-xl-9 col-lg-8">
                    <div class="tp-contact-wrapper">
                        <h3 class="tp-contact-title">Sent A Message</h3>
                        <div class="tp-contact-form">
                                <div class="tp-contact-input-wrapper">
                                    <div class="tp-contact-input-box">
                                        <div class="tp-contact-input">
                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" , placeholder = "Your Name" })
                                        </div>
                                        <div class="tp-contact-input-title">
                                            <label for="name">Your Name <span style="color:red">*</span></label>
                                        </div>
                                    </div>
                                    <div class="tp-contact-input-box">
                                        <div class="tp-contact-input">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "email@MSCLShopping.com" })
                                        </div>
                                        <div class="tp-contact-input-title">
                                            <label for="email">Your Email <span style="color:red">*</span></label>
                                        </div>
                                    </div>
                                    <div class="tp-contact-input-box">
                                        <div class="tp-contact-input">
                                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @placeholder = "Write your subject" })
                                        </div>
                                        <div class="tp-contact-input-title">
                                            <label for="subject">Subject <span style="color:red">*</span></label>
                                        </div>
                                    </div>
                                    <div class="tp-contact-input-box">
                                        <div class="tp-contact-input">
                                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control" , @placeholder = "Write your message here..." })
                                        </div>
                                        <div class="tp-contact-input-title">
                                            <label for="message">Your Message <span style="color:red">*</span></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="tp-contact-btn">
                                    <button type="submit" onclick="return validateform();">Send Message</button>
                                </div>
                            
                            <p class="ajax-response"></p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-4">
                    <div class="tp-contact-info-wrapper">
                        <div class="tp-contact-info-item">
                            <div class="tp-contact-info-icon">
                                <span>
                                    <img src="/newassets/img/contact/contact-icon-1.png" alt="">
                                </span>
                            </div>
                            <div class="tp-contact-info-content">
                                <p data-info="mail"><a href="mailto:moradabadnagarnigam@gmail.com">moradabadnagarnigam@gmail.com</a></p>
                                <p data-info="phone"><a href="tel:+91 0000-000-000">+91 0000-000-000</a></p>
                            </div>
                        </div>
                        <div class="tp-contact-info-item">
                            <div class="tp-contact-info-icon">
                                <span>
                                    <img src="/newassets/img/contact/contact-icon-2.png" alt="">
                                </span>
                            </div>
                            <div class="tp-contact-info-content">
                                <p>
                                    <a href="#" target="_blank">
                                        PeeliKothi, Water Works Compound Civil Lines, Moradabad -244001, (U.P.)
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="tp-contact-info-item">
                            <div class="tp-contact-info-icon">
                                <span>
                                    <img src="/newassets/img/contact/contact-icon-3.png" alt="">
                                </span>
                            </div>
                            <div class="tp-contact-info-content">
                                <div class="tp-contact-social-wrapper mt-5">
                                    <h4 class="tp-contact-social-title">Find on social media</h4>
                                    <div class="tp-contact-social-icon">
                                        <a href="https://www.facebook.com/Moradabad-Smart-City-108878470919312/" target="_blank"><i class="fa-brands fa-facebook-f"></i></a>
                                        <a href="https://twitter.com/MSCL19" target="_blank"><i class="fa-brands fa-twitter"></i></a>
                                        <a href="https://www.linkedin.com/in/mscl19/" target="_blank"><i class="fa-brands fa-linkedin-in"></i></a>
                                        <a href="https://www.youtube.com/channel/UCh0KZxnN1krxt6HqwodAGJg" target="_blank"><i class="fa-brands fa-youtube"></i></a>
                                        <a href="https://www.instagram.com/moradabadsmartcity/" target="_blank"><i class="fa-brands fa-instagram"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- contact area end -->
<!-- map area start -->
<section class="tp-map-area pb-120">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="tp-map-wrapper">
                    <div class="tp-map-iframe">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3494.811102632195!2d78.76267277518683!3d28.84448337442478!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x390afbe680e6aaab%3A0x14b334b32a84c37e!2ssmart%20city%20moradabad.org!5e0!3m2!1sen!2sin!4v1704366697896!5m2!1sen!2sin" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        @*<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3559.2831584145015!2d80.99435017531263!3d26.862743362236568!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x399be3ad67cf86c1%3A0xe090e6813b2b28b9!2sAfluex%20Multiservices%20LLP%20-%20Software%20Development%20Company%20%26%20advertising-agency!5e0!3m2!1sen!2sin!4v1703247915401!5m2!1sen!2sin" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

}
<script>
    function validateform() {
        $(".errortext").removeClass("errortext");
        if ($('#Name').val() == '') {
            $("#Name").addClass('errortext');
            $('#Name').focus();
            return false;
        }
        if ($('#Email').val() == '') {
            $("#Email").addClass('errortext');
            $('#Email').focus();
            return false;
        }
        if ($('#Subject').val() == '') {
            $("#Subject").addClass('errortext');
            $('#Subject').focus();
            return false;
        }
        if ($('#Message').val() == '') {
            $("#Message").addClass('errortext');
            $('#Message').focus();
            return false;
        }

        $("#divload").css({ 'display': '' });
        return true;
    }
</script>