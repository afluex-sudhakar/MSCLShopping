@model AfluexShopping.Models.Master

@{
    ViewBag.Title = "BannerList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}




@using (Html.BeginForm("BannerList", "Master", FormMethod.Post, new { @id = "form1" }))
{
    <div class="page-header">
        <div>
            <h1 class="page-title">Banner List</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Master</a></li>
                <li class="breadcrumb-item"><a href="#">Banner</a></li>
                <li class="breadcrumb-item active" aria-current="page">Banner List</li>
            </ol>
        </div>
        <div class="ms-auto pageheader-btn">
                <a href="/Master/Banner" class="btn btn-primary btn-icon text-white me-2">
                    <span>
                        <i class="fe fe-plus"></i>
                    </span> Add Banner
                </a>
            </div>
    </div>
    <div class="row">
        <div class="card">
                <p style="color:red">
                    @TempData["BannerList"]
                </p>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="data-table" class="table table-bordered text-nowrap mb-0">
                        <thead class="border-top">
                            <tr>
                                <th hidden>PK_GalleryID</th>
                                <th>S No.</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstProduct != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstProduct)
                                    {
                                        <tr class="text-left">
                                            <td hidden>@Item.BannerID</td>
                                            <td>@i</td>


                                            <td> <img src="@Item.BannerImage" id="img" height="100" width="100" /></td>

                                            <td>
                                                <a href="/Master/DeleteBanner?id=@Item.BannerID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
}


