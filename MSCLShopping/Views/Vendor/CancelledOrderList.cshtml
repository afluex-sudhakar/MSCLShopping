@model MSCLShopping.Models.CustomerManagement

@{
    ViewBag.Title = "CancelledOrderList";
    Layout = "~/Views/Shared/VendorLayout.cshtml";
}


@using (Html.BeginForm("CancelledOrderList", "Vendor", FormMethod.Post, new { @id = "form1" }))
{

    <div class="content content-fixed">
        <div class="container pd-x-0 pd-lg-x-10 pd-xl-x-0">
            <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-30">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                            <li class="breadcrumb-item"><a href="#">Orders</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Cancelled Orders</li>
                        </ol>
                    </nav>

                </div>
                <div class="d-none d-md-block">
                    @Html.HiddenFor(m => m.OrderDetailsID)

                    <p>
                        @TempData["Offer"]
                    </p>

                </div>
            </div>
            <div class="row row-xs">
                <div class="col-lg-12">
                    <div class="card">

                        <div class="card-footer pd-y-15 pd-x-20">

                            <div class="row row-xs">
                                <div class="col-md-3">

                                    Customer Name
                                    @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control" })

                                </div>

                                <div class="col-md-3">

                                    Order Number
                                    @Html.TextBoxFor(m => m.OrderNO, new { @class = "form-control" })

                                </div>

                                <div class="col-md-3">
                                    <br />
                                    <input class="btn btn-success" type="submit" value="Search" id="btnSearch" name="Search" />

                                </div>
                                @if (Model != null)
                                {
                                    if (Model.List != null)
                                    {

                                        <div class="col-md-3">

                                            <input class="btn btn-success pull-right" type="submit" value="Refund" id="btnUpdate" name="Update" style="margin-bottom: 10px;" />

                                        </div>


                                    }
                                }

                            </div>
                            
                            <br />
                            @if (Model.CustomerName != null)
                            {
                                <div class="row row-xs">
                                    <table class="display nowrap table table-hover table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th hidden>OrderDetailsID</th>
                                                <th>S No.</th>
                                                <th>OrderDate</th>
                                                <th>OrderNo</th>
                                                <th>ProductName</th>
                                                <th>CustomerName</th>
                                                <th>Mobile</th>
                                                <th>Quantity</th>
                                                <th>Amount</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.List != null)
                                                {
                                                    int i = 1;
                                                    foreach (var Item in Model.List)
                                                    {
                                                        <tr class="text-left">
                                                            <td hidden>@Item.OrderDetailsID</td>
                                                            <td>@i</td>
                                                            <td>@Item.OrderDate</td>
                                                            <td>@Item.OrderNumber </td>
                                                            <td>@Item.ProductName</td>
                                                            <td>@Item.CustomerName</td>
                                                            <td>@Item.Mobile</td>
                                                            <td>@Item.Quantity</td>
                                                            <td>@Item.TotalAmount</td>
                                                            <td>
                                                                <input type="checkbox" id="Chk_ @i" name="Chk_ @i" />
                                                                <input type='hidden' value='@Item.OrderDetailsID' id='orderdetailid_ @i' name='orderdetailid_ @i'>
                                                                <input type='hidden' value='@Item.TotalAmount' id='amt_ @i' name='amt_ @i'>
                                                                <input type='hidden' value='@Item.CustomerID' id='custid_ @i' name='custid_ @i'>
                                                            </td>
                                                        </tr>
                                                        i++;
                                                    }

                                                    <input type='hidden' value='@i' id='hdrows' name='hdrows' />
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                               
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}


<script src="../../AdminCSS/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        maxDate: 0,
        changeYear: true,
        changeMonth: true
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
        minDate: new Date(new Date().setMonth(new Date().getMonth() - 2))
    });

</script>

