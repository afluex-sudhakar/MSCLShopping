@model MSCLShopping.Models.Master

@{
    ViewBag.Title = "NewArrivalsList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("NewArrivalsList", "Master", FormMethod.Post, new { @id = "form1" }))
{
    <div class="page-header">
        <div>
            <h1 class="page-title">New Arrivals List</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Master</a></li>
                <li class="breadcrumb-item"><a href="#">Assign Product Feature Type</a></li>
                <li class="breadcrumb-item active" aria-current="page">New Arrivals List</li>
            </ol>
        </div>
        @*<div class="ms-auto pageheader-btn">
                <a href="#" class="btn btn-primary btn-icon text-white me-2">
                    <span>
                        <i class="fe fe-plus"></i>
                    </span> Add Account
                </a>
                <a href="#" class="btn btn-success btn-icon text-white">
                    <span>
                        <i class="fe fe-log-in"></i>
                    </span> Export
                </a>
            </div>*@
    </div>
    <div class="row">
        <div class="card">
            <div>
                <p style="color:red">
                    @TempData["Offer"]
                </p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <label class="form-label">Main Category</label>
                            @Html.DropDownListFor(m => m.MainCategoryID, new SelectList(ViewBag.ddlMainCategory, "Value", "Text"), new { @class = "form-control form-select", @onchange = "return onMainCategoryChange();" })
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <label class="form-label">Category</label>
                            @Html.DropDownListFor(m => m.CategoryID, new SelectList(ViewBag.ddlCategory, "Value", "Text"), new { @class = "form-control form-select", @onchange = "return onCategoryChange();" })
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <label class="form-label">Sub Category</label>
                            @Html.DropDownListFor(m => m.SubCategoryID, new SelectList(ViewBag.ddlSubCategory, "Value", "Text"), new { @class = "form-control form-select" })
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <label class="form-label">Product</label>
                            @Html.DropDownListFor(m => m.ProductID, new SelectList(ViewBag.ddlProduct, "Value", "Text"), new { @class = "form-control form-select" })
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <input class="btn btn-success" type="submit" value="Search" id="btnSearch" name="Search" />
                        </div>
                    </div>
                </div>

                <div class="table-responsive mt-3">
                    <table id="data-table" class="table table-bordered text-nowrap mb-0">
                        <thead class="border-top">
                            <tr>
                                <th>S No.</th>
                                <th>Main Category</th>
                                <th>Category</th>
                                <th>Sub Category </th>
                                <th>Product Name</th>
                                <th>Unit</th>
                                <th>Size</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstProduct != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstProduct)
                                    {
                                        <tr class="text-left">

                                            <td>@i</td>
                                            <td>@Item.MainCategoryName</td>
                                            <td>@Item.CategoryName</td>
                                            <td>@Item.SubCategoryName</td>
                                            <td>@Item.ProductName</td>
                                            <td>@Item.UnitName</td>
                                            <td>@Item.SizeName</td>

                                            <td>
                                                @*<a href="//?OfferID=@Item.OfferID" class="btn btn-info btn-sm">Edit</a>*@
                                                <a href="/Master/DeleteNewArrivals?id=@Item.OfferProductID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this ?');">Delete</a>
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
}



<script>
    function onMainCategoryChange() {
        debugger
        var value = $('#MainCategoryID').val();
        var values = $('#CategoryID').val();

        $.ajax({
            url: "/Master/GetCategoryByMainCategory",
            Type: "Get",
            DataType: "JSON",
            data: { MainCategoryID: value },
            success: function (data) {

                // alert(data.Result);

                $("#CategoryID").html(""); // clear before appending new list
                $("#CategoryID").empty();

                $("#CategoryID").append(
                      $('<option></option>').val(0).html('Select Category'));
                $.each(data.ddlCategory, function (index, count) {
                    $("#CategoryID").append(
                          $('<option></option>').val(count.Value).html(count.Text));

                });


            }

        });

    }

    function onCategoryChange() {
        debugger
        var MainCategoryId = $('#MainCategoryID').val();
        var CategoryId = $('#CategoryID').val();
        $.ajax({
            url: '/Master/GetSubCategory', type: 'post', dataType: 'json',
            data: { 'MainCategoryID': MainCategoryId, 'CategoryID': CategoryId },
            success: function (data) {

                $("#SubCategoryID").html(""); // clear before appending new list
                $("#SubCategoryID").empty();
                $("#SubCategoryID").append(
                      $('<option></option>').val(0).html('Select SubCategory'));
                $.each(data.ddlSubCategory, function (index, BlockCount) {
                    $("#SubCategoryID").append(
                          $('<option></option>').val(BlockCount.Value).html(BlockCount.Text));
                });

            }

        });

    }

</script>




