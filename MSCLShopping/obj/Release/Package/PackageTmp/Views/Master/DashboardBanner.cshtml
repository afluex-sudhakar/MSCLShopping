@model AfluexShopping.Models.Master

@{
    ViewBag.Title = "DashboardBanner";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

  
@using (Html.BeginForm("DashboardBanner", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{


    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Dashboard Banner</h4>
             
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>
                            Dashboard Banner Image <span style="color: red">*</span>
                        </label>
                        <input type="file" name="postedFile" id="Image" onchange="readURL(this)" />
                        <img src="" id="ContentPlaceHolder1_imgProductImage" class="fileinput-preview thumbnail" style="width: 150px; height: 100px;" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input class="btn btn-success btn-sm" type="submit" onclick="return validateform();" value="Save" id="btnSave" name="btnSave" />
                        @*<a class="btn btn-primary btn-sm" href="/Master/BannerList">Back To List</a>*@
                    </div>

                    <p style="color: @TempData["Class"]">
                        @TempData["DBBanner"]
                    </p>

                </div>
            </div>


        </div>
    </div>

}



<script>

    function validateform() {
        $(".errortext").removeClass("errortext");
        //if ($('#BannerName').val() == '') {
        //    $("#BannerName").addClass('errortext');
        //    $('#BannerName').focus();
        //    return false;
        //}

        if ($('#Image').val() == '') {
            $("#Image").addClass('errortext');
            $('#Image').focus();
            alert("Please select  image..!");
            return false;
        }
        return true;
    }

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#ContentPlaceHolder1_imgProductImage')
                    .attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

