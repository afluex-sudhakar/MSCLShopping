                    <div class="col-4">
                        <div class="circle-icon  circle-icon bg-success align-items-center text-center box-success-shadow">
                            <img src="~/AssetsAdmin/images/svgs/circle.svg" alt="img" class="card-img-absolute">
                            <i class="lnr lnr-gift fs-30 text-white mt-4"></i>
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="card-body p-4">
                            <h2 class="mb-2 fw-normal mt-2">@ViewBag.Offers</h2>
                            <h5 class="fw-normal mb-0">Total Offers</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-lg-6 col-md-12 col-xl-3">
            <div class="card">
                <div class="row">
                    <div class="col-4">
                        <div class="circle-icon circle-icon bg-danger align-items-center text-center box-danger-shadow">
                            <img src="~/AssetsAdmin/images/svgs/circle.svg" alt="img" class="card-img-absolute">
                            <i class="lnr lnr-file-add fs-30 text-white mt-4 "></i>
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="card-body p-4">
                            <h2 class="mb-2 fw-normal mt-2">@ViewBag.Invoices</h2>
                            <h5 class="fw-normal mb-0">Total Invoices</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

                        <div class="row row-sm">
                            <div class="col-lg-12">
                                <div class="card custom-card">
                                    <div class="card-body">
                                        <div>
                                            <h3 class="mb-3">Offers</h3>
                                            @*<p class="text-muted card-sub-title">Add borders on all sides of the table and cells.</p>*@
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table border text-nowrap text-md-nowrap table-bordered mg-b-0">
                                                <thead>
                                                    <tr>
                                                        <th>Sr No.</th>
                                                        <th>Offer Name</th>
                                                        <th> Date</th>
                                                        <th>Status</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model != null)
                                                    {
                                                        if (Model.List != null)
                                                        {
                                                            int i = 1;
                                                            foreach (var Item in Model.List)
                                                            {
                                                                <tr>
                                                                    <td>@i</td>

                                                                    <td>@Item.OfferName</td>
                                                                    <td>@Item.FromDate-@Item.ToDate</td>
                                                                    <td>@Item.OfferStatus</td>

                                                                </tr>
                                                                i++;
                                                            }
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>




                   


