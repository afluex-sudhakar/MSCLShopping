@model AfluexShopping.Models.Vendor

@{
    ViewBag.Title = "BrandApproval";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("BrandApproval", "Admin", FormMethod.Post, new { @id = "form1" }))
{

    <div class="page-header">
        <div>
            <h1 class="page-title">Brand Request List</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Vendor</a></li>
                <li class="breadcrumb-item active" aria-current="page">Brand Request List</li>
            </ol>
        </div>
        @*<div class="ms-auto pageheader-btn">
                <a href="#" class="btn btn-primary btn-icon text-white me-2">
                    <span>
                        <i class="fe fe-plus"></i>
                    </span> Add Account
                </a>
                <a href="#" class="btn btn-success btn-icon text-white">
                    <span>
                        <i class="fe fe-log-in"></i>
                    </span> Export
                </a>
            </div>*@
    </div>
    <div class="row">
        <div class="card">
            <div>
                <p style="color:red">
                    @TempData["BrandApproval"]
                </p>
            </div>
            @*<div class="card-header">
                    <h3 class="card-title">Products Added By Vendor</h3>
                </div>*@
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <label class="form-label">Status</label>
                            @Html.DropDownListFor(m => m.Status, new SelectList(ViewBag.Status, "Value", "Text"), new { @class = "form-control form-select" })
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <label class="form-label">From Date</label>
                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "From Date", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <label class="form-label">To Date</label>
                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "To Date", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <label class="form-label d-lg-block d-none">&nbsp;</label>
                            <input class="btn btn-success d-block" type="submit" value="Search" id="btnSearch" name="Search" />
                        </div>
                    </div>
                </div>

                <div class="table-responsive mt-3">
                    <table id="data-table" class="table table-bordered text-nowrap mb-0">
                        <thead class="border-top">
                            <tr>
                                <th>SNo.</th>
                                <th>Request Date</th>
                                <th>Request Code</th>
                                <th>Vednor Name</th>
                                <th>Brand Name</th>
                                <th>Brand Logo</th>
                                <th>Website Link</th>
                                <th>Document Type</th>
                                <th>Document File</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstRequests != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstRequests)
                                    {
                                        <tr class="text-left">
                                            <td>@i</td>
                                            <td>@Item.AddedOn</td>
                                            <td>@Item.RequestCode</td>
                                            <td>@Item.DisplayName</td>
                                            <td>@Item.BrandName</td>
                                            <td>@Item.BrandLogo</td>
                                            <td>@Item.WebsiteLink</td>
                                            <td>@Item.DocumentType</td>
                                            <td>
                                                <img src="@Item.DocumentPath" height="150" width="150" />
                                            </td>
                                            <td>
                                                @if (Item.Status == "Pending")
                                                {
                                                    <a href="/Admin/ApproveBrandrequest?rcode=@Item.RequestCode" onclick="return confirm('Are you sure you want to approve this Request?');" class="btn btn-info btn-sm">Approve</a>
                                                }
                                                else
                                                {
                                                    <label class="label label-success">Approved</label>
                                                }
                                            </td>
                                        </tr>

                                        i++;
                                    }
                                }
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
    
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>

<script>

    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true,

        });
    });

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        //changeYear: true,
        //changeMonth: true,

    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        //changeYear: true,
        //changeMonth: true
    });
</script>




