@model AfluexShopping.Models.Master

@{
    ViewBag.Title = "Banner";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("SaveBanner", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="page-header">
        <div>
            <h1 class="page-title">Banner</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Master</a></li>
                <li class="breadcrumb-item active" aria-current="page">Banner</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="card">
                <p style="color: @TempData["Class"]">
                    @TempData["Banner"]
                </p>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6 col-md-6">
                        <div class="form-group">
                            <label class="form-label">Banner Image <span style="color: red">*</span></label>
                            <input type="file" name="postedFile" id="Image" onchange="readURL(this)" />
                            <img src="@Model.Images" id="ContentPlaceHolder1_imgProductImage" class="fileinput-preview thumbnail" style="width: 150px; height: 100px;" />
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-8">
                        <div class="form-group">
                            <input class="btn btn-success" type="submit" onclick="return validateform();" value="Save" id="btnSave" name="Save" />
                            <a class="btn btn-primary" href="/Master/BannerList">Back To List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}



<script>

    function validateform() {
        $(".errortext").removeClass("errortext");
        //if ($('#BannerName').val() == '') {
        //    $("#BannerName").addClass('errortext');
        //    $('#BannerName').focus();
        //    return false;
        //}

        if ($('#Image').val() == '') {
            $("#Image").addClass('errortext');
            $('#Image').focus();
            alert("Please select  image..!");
            return false;
        }
        return true;
    }

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#ContentPlaceHolder1_imgProductImage')
                    .attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

