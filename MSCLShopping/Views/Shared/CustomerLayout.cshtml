    <script>
        function Search() {
            $("#divload").css({ 'display': '' });
            var value = $('#txtsearch').val();
            window.location.href = "/Customer/ProductList?Status=" + value;
        }
        $(document).on('keypress', function (e) {
            if (e.which == 13) {
                Search();
            }
        });
        function login() {
            $(".errortext").removeClass("errortext");
            if ($('#LoginID').val() == '') {
                $("#LoginID").addClass('errortext');
                $('#LoginID').focus();
                return false;
            }
            if ($('#Password').val() == '') {
                $("#Password").addClass('errortext');
                $('#Password').focus();
                return false;
            }

            $.ajax({
                url: "/Home/LoginCustomer",
                Type: "Get",
                DataType: "JSON",
                data: { LoginID: $("#LoginID").val(), Password: $("#Password").val() },
                success: function (data) {
                    if (data.Result == "1") {
                        window.location.reload();
                    }
                    else {
                        alert(data.Result);
                    }
                }
            });
        }
        function logout() {
            $.ajax({
                url: "/Home/Logout",
                Type: "Get",
                DataType: "JSON",
                data: {},
                success: function (data) {
                    if (data.Result == "1") {
                        window.location.href = "/Home/Index";
                    }
                }
            });
        }

        $(document).ready(function () {

            var cityuse = [];

            $.ajax({
                url: '/Customer/AutoSearchProduct',
                type: 'Post',
                success: function (response) {
                    if (response != null) {

                        //alert("Respose is not null");
                        $(response).each(function (index, item) {
                            cityuse.push(item.ProductName);
                        });

                        $('#txtsearch').autocomplete({
                            source: cityuse,
                            select: function (event, ui) {
                                var str = ui.item.label;



                                // $('#LoginId').val(strsplit[1].substr(0, strsplit[1].length - 1));

                            }
                        })
                    }
                    else {

                    }
                }, error: function () {
                    alert('Some Thing wrong!');
                    $("#loader").css({ 'display': 'none' });
                }
            });
        });
    </script>
