    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',

        changeYear: true,
        changeMonth: true
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,

    });

</script>

