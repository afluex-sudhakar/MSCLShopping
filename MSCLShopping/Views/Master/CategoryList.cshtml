@model MSCLShopping.Models.Master

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("CategoryList", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="page-header">
        <div>
            <h1 class="page-title">Category List</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Master</a></li>
                <li class="breadcrumb-item"><a href="#">Category</a></li>
                <li class="breadcrumb-item active" aria-current="page">Category List</li>
            </ol>
        </div>
        <div class="ms-auto pageheader-btn">
                <a href="/Master/Category" class="btn btn-primary btn-icon text-white me-2">
                    <span>
                        <i class="fe fe-plus"></i>
                    </span> Add Category
                </a>
            </div>
    </div>

    <div class="row">
        <div class="card">
            @*<div class="card-header">
                <h3 class="card-title mb-0">Category List</h3>
            </div>*@
            <div class="card-body">
                <div class="table-responsive mt-3">
                    <table id="data-table" class="table table-bordered text-nowrap mb-0">
                        <thead class="border-top">
                            <tr>
                                <th>S No.</th>
                                <th>Main Category</th>
                                <th>Category Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstProduct != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstProduct)
                                    {
                                        <tr class="text-left">
                                            <td>@i</td>
                                            <td>@Item.MainCategoryName</td>
                                            <td>@Item.CategoryName</td>
                                            <td>
                                                <a href="/Master/Category?CategoryID=@Item.CategoryID" class="btn btn-info btn-sm">Edit</a>
                                                <a href="/Master/DeleteCategory/@Item.CategoryID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you wish to delete this Category?');">Delete</a>
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


}

